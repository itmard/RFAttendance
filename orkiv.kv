AccountDetailsForm:
 
<AccountDetailsForm>:
    anchor_y: "top"
    server_box: server_input
    username_box: username_input
    password_box: password_input
    status_label: status_label
    BoxLayout:
        orientation: "vertical"
        height: "240dp"
        size_hint_y: None
        Label:
            id: status_label
            size_hint_y: None
            height: "40dp"
        GridLayout:
            cols: 2
            row_default_height: "40dp"
            row_force_default: True
            spacing: "10dp"
            padding: "10dp"
            Label:
                text: "Server"
            TextInput:
                id: server_input
            Label:
                text: "Username"
            TextInput:
                id: username_input
            Label:
                text: "Password"
            TextInput:
                password: True
                id: password_input
        Button:
            size_hint_y: None
            height: "40dp"
            text: "Login"
            on_press: root.login()
