<SessionsTab>:
    text: 'Sessions'
    SessionsScreenManager:
        ListSessions:
        ListAttendance:
    
<ListSessions>:
    name: 'list_sessions'
    BoxLayout:
        orientation: 'vertical'
        ListView:
            id: session_list
        AnchorLayout:
            anchor_y: 'bottom'
            size_hint_y: 0.1
            BoxLayout:
                TextInput:
                    id: session_name
                    multiline: False
                    on_text_validate: root.create_new_session()
                Button:
                    text: 'Create'
                    on_press: root.create_new_session()
                    size_hint_x: 0.3

<ListAttendance>:
    name: 'list_attendance'
    BoxLayout:
        orientation: 'vertical'
        ListView:
            id: attendance_list
